# Backend Dockerfile
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY backend/services/*/package.json ./backend/services/*/

# Install dependencies
RUN npm install

# Copy backend source
COPY backend ./backend
COPY tsconfig*.json ./

# Expose backend port
EXPOSE 4000

# Start backend server
CMD ["npm", "run", "start"]

